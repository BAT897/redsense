<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Requirement>
    <Client>AdventureWorks2012</Client>
    <Version>1.0</Version>
    <Tables>
        <Table Name="Person.Person" PKey="BusinessEntityID">
            <Columns>
                <Column Name="FirstName" ReturnType="String">
                    <Function>com.strider.dataanonymizer.functions.CoreFunctions.randomFirstName</Function>
                    <Parameters>
                        <Parameter Name="file" Value="C:\work\da\RandomFirstNames.txt" Type="String"/>
                    </Parameters>
                </Column>
                <Column Name="LastName" ReturnType="String">
                    <Function>com.strider.dataanonymizer.functions.CoreFunctions.randomLastName</Function>
                    <Parameters>
                        <Parameter Name="file" Value="C:\work\da\RandomLastNames.txt" Type="String"/>
                    </Parameters>
                </Column>
                <Column Name="MiddleName" ReturnType="String">
                    <Function>com.strider.dataanonymizer.functions.CoreFunctions.randomLastName</Function>
                    <Parameters>
                        <Parameter Name="file" Value="C:\work\da\RandomMiddleNames.txt" Type="String"/>
                    </Parameters>
                </Column>
            </Columns>
        </Table>
        <Table Name="Person.PersonPhone" PKey="BusinessEntityID">
            <Columns>
                <Column Name="PhoneNumber" ReturnType="String">
	            <Function>com.strider.dataanonymizer.functions.CoreFunctions.generateStringFromPattern</Function>
	            <Parameters>
	                <Parameter Name="pattern" Value="604-[0-9]{3}-[0-9]{4}" Type="String"/>
	            </Parameters>
	        </Column>        
	    </Columns>
        </Table>
        <Table Name="Person.EmailAddress" PKey="BusinessEntityID">
            <Columns>
                <Column Name="EmailAddress" ReturnType="String">
	            <Function>com.strider.dataanonymizer.functions.CoreFunctions.randomEmail</Function>
                    <Parameters>
                        <Parameter Name="domain" Value="ubc.ca" Type="String"/>
                    </Parameters>
	        </Column>        
	    </Columns>
        </Table>        
    </Tables>
</Requirement>